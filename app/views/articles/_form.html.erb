<%= form_with model: article do |form| %>
  <div class="form group">
  <%= form.file_field :image %>

  </div>
  <div class="form group mb-3">
    <%= form.label :title %><br>
    <%= form.text_field :title, class:"form-control form-control-lg" %>
    <% article.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="form group mb-3">  
    <%= form.number_field :user_id,id: :article_user_id, class:"form-control form-control-lg" , value: current_user.id,type: :hidden%>
    <% article.errors.full_messages_for(:user_id).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  
  <div class="form group mb-3">
    <%= form.label :body %><br>
    <%= form.text_area :body , class:"form-control form-control-lg"%><br>
    <% article.errors.full_messages_for(:body).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit class:"btn btn-primary btn-lg" %>
  </div>
<% end %>
  